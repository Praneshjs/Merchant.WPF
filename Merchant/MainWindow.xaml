<Window x:Class="Merchant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Merchant"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="379,176,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
        <Button Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="379,212,0,0" VerticalAlignment="Top" Width="75" Click="btnExit_Click"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="294,47,0,0" VerticalAlignment="Top"/>
        <TabControl Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
            <TabItem Header="Product Master">
                <!--<local:ProductMasterControl/>-->
            </TabItem>
            <!-- Other tab items for different functionalities -->
        </TabControl>
    </Grid>
</Window>
